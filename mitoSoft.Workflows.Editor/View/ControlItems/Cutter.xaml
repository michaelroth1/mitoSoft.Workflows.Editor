<UserControl x:Class="mitoSoft.Workflows.Editor.View.Cutter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mitoSoft.Workflows.Editor.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" HorizontalAlignment="Left" VerticalAlignment="Top">
    <UserControl.RenderTransform>
        <TransformGroup>
            <ScaleTransform x:Name="ScaleTransformElement" ScaleX="1" ScaleY="1"/>
            <SkewTransform/>
            <RotateTransform/>
            <TranslateTransform x:Name="TranslateTransformElement"/>
        </TransformGroup>
    </UserControl.RenderTransform>
    <Line x:Name="LineElement" Stroke="{DynamicResource ColorCutter}"  HorizontalAlignment="Left" VerticalAlignment="Top" StrokeDashArray="10, 3" StrokeDashCap="Round" StrokeEndLineCap="Round" StrokeStartLineCap="Round"/>
</UserControl>
